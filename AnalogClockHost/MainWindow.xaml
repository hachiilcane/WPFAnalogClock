<Window x:Class="AnalogClockHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnalogClockHost"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock x:Name="TargetDateTimeText" />
                <DatePicker x:Name="BaseDatePicker" SelectedDate="2019/8/25" />
            </StackPanel>
            <local:AnalogClock x:Name="AnalogClockView"  BaseDateTime="{Binding ElementName=BaseDatePicker, Path=SelectedDate}" />
        </StackPanel>
    </Grid>
</Window>
